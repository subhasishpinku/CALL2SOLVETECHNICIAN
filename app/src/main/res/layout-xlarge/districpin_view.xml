<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginRight="3dp"
            android:background="@drawable/squareshape"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pincodeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                android:text="Pin Code Covered"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/juestId"
                android:visibility="gone"
                android:layout_alignBaseline="@+id/pincodeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0sp"
                android:background="@drawable/ic_phone_black_24dp"
                android:layout_marginRight="20sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/ckId"
            android:background="@drawable/card_view_shape"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:drawableLeft="@drawable/map_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="P.O. : Ghoshpara (711227)"/>

    </LinearLayout>
</LinearLayout>
