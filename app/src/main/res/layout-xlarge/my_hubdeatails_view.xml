<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_shape"
        android:paddingBottom="5sp"
        android:layout_marginBottom="10sp">
        <ImageView
            android:id="@+id/juestId"
            android:layout_alignBaseline="@+id/desigId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nameId"
            android:layout_marginTop="0sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/ic_phone_black_24dp" />
        <TextView
            android:id="@+id/callnowId"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/juestId"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:text="Call Now" />
        <TextView
            android:textSize="14sp"
            android:id="@+id/userId"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/nameId"
            android:layout_toRightOf="@+id/imgID"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Name"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/desigId"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/userId"
            android:layout_toRightOf="@+id/imgID"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text=" View Designation"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/poneId"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/desigId"
            android:layout_toRightOf="@+id/imgID"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="phone"/>
        <TextView
            android:textSize="14sp"
            android:id="@+id/emailId"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/poneId"
            android:layout_toRightOf="@+id/imgID"
            android:layout_marginLeft="10sp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Email"/>
    </RelativeLayout>
</LinearLayout>
