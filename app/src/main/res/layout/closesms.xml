<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="RtlCompat"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:src="@mipmap/logo" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/lv"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="15sp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlCompat">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="left"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/pnameID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="PRODUCtNAME"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/cnameID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="COMPANYNAME"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/mnameID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="MODELNO"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:textSize="15sp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/pissuedID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="PRODUCTISSUED"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="left"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalId"
                android:textSize="14sp"
                android:layout_marginBottom="10sp"
                android:layout_below="@+id/llvv"
                android:layout_toRightOf="@+id/imgID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Total Payment :"/>
            <TextView
                android:id="@+id/VchargeId"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/totalId"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100sp"
                android:drawableLeft="@drawable/rupeess"
                android:text="500"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/VchargeId"-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="2dp"-->
<!--            android:text="PRODUCTISSUED"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/black"-->
<!--            android:gravity="left"-->
<!--            android:textSize="15sp"/>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lvv"
        android:background="@drawable/squareshape"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="CHARGE DETAILS"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:gravity="left"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Service Charge: 200"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="@color/black" />
        <RadioGroup
            android:id="@+id/chagegroudId"
            android:background="@drawable/squareshape"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/onlychageId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ONLY VISIT"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
            <RadioButton
                android:id="@+id/addchageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD CHARGES"
                android:textColor="@color/colorblack"
                android:textSize="18sp"/>

        </RadioGroup>
        <LinearLayout
            android:id="@+id/onlyLvId"
            android:visibility="visible"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/addlvId"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerVieww"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:id="@+id/VbarId"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:background="@color/black" />
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:background="@drawable/squareshape"
            android:id="@+id/PnameId"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="Enter Parts Name"
            android:paddingLeft="5sp"/>
        <EditText
            android:background="@drawable/squareshape"
            android:id="@+id/amuId"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:hint="Enter Parts Amount"
            android:paddingLeft="5sp"/>
        <EditText
            android:background="@drawable/squareshape"
            android:id="@+id/pmodelNoId"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="Enter Product Model No"
            android:paddingLeft="5sp"/>
        <EditText
            android:background="@drawable/squareshape"
            android:id="@+id/pbrandId"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="Enter Product Brand"
            android:paddingLeft="5sp"/>
        <EditText
            android:background="@drawable/squareshape"
            android:id="@+id/quntyId"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="Enter quantity"
            android:paddingLeft="5sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:background="@color/black" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/calculateId"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_width="100sp"
                android:layout_height="50dp"
                android:text="Calculate"
                android:layout_alignParentLeft="true"
                android:background="@drawable/square_shape_blue"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/squareshape"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1.8"
                    android:gravity="left"
                    android:text="TOTAL :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addvalueId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:text="200"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>
        <LinearLayout
            android:id="@+id/lvvv"
            android:background="@drawable/squareshape"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_below="@+id/lvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Technician Feedback"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="10sp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="Rate Our Service :"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5sp"
                    android:background="@color/black" />
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:numStars="5"/>
                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="About Customer  :"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/reviewId"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/squareshape"
                    android:gravity="top|center"
                    android:hint="Please Write Something"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_below="@+id/lvvv"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Enter Satisfaction Code"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.goodiebag.pinview.Pinview
            android:id="@+id/pinview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:cursorVisible="false"
            app:forceKeyboard="false"
            app:hint=""
            app:textSize="15sp"
            app:inputType="number"
            app:password="false"
            app:pinHeight="60dp"
            app:pinLength="4"
            app:pinWidth="60dp" />
    </LinearLayout>
    <Button
        android:id="@+id/subID"
        android:layout_marginBottom="10sp"
        android:layout_width="100sp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:text="Resend Otp"
        android:background="@drawable/square_shape_blue"
        android:textColor="@color/white"
        android:textSize="14sp"/>
</RelativeLayout>
</ScrollView>