<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="RtlCompat"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:src="@mipmap/logo" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/partId"
        android:textSize="15sp"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/imgID"
        android:layout_marginLeft="10sp"
        android:drawableLeft="@drawable/ic_work_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Job Pending"/>
    <LinearLayout
        android:id="@+id/lvothet"
        android:layout_below="@+id/partId"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/pendingGpId"
            android:background="@drawable/squareshape"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/pendingpartId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PENDING FOR PART"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
            <RadioButton
                android:id="@+id/pendingothetId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING FOR OTHER"
                android:textColor="@color/colorblack"
                android:textSize="18sp"/>

        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lvv"
        android:layout_below="@+id/lvothet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/square_border"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
            <TableRow
                android:layout_marginTop="5sp"
                android:padding="1dp"
                android:weightSum="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Company" />
                <EditText
                    android:id="@+id/CompanyId"
                    android:background="@drawable/square_border"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="Enter Company Name" />

            </TableRow>
            <TableRow
                android:padding="1dp"
                android:weightSum="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Model No" />
                <EditText
                    android:id="@+id/modelId"
                    android:layout_marginLeft="15sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/square_border"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="Scanner for Model No" />
                <ImageView
                    android:id="@+id/scanerId"
                    android:layout_width="0sp"
                    android:layout_gravity="center"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_scanner_black_24dp" />
                <ImageView
                    android:id="@+id/modelImageId"
                    android:layout_width="0sp"
                    android:layout_gravity="center"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_camera_alt_black_24dp" />

            </TableRow>
            <TableRow
                android:padding="1dp"
                android:weightSum="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Serial No" />
                <EditText
                    android:id="@+id/serialnoID"
                    android:layout_marginLeft="15sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/square_border"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="Scanner for Serial No" />
                <ImageView
                    android:id="@+id/scanerIdd"
                    android:layout_width="0sp"
                    android:layout_gravity="center"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_scanner_black_24dp" />
                <ImageView
                    android:id="@+id/modelImageIdd"
                    android:layout_width="0sp"
                    android:layout_gravity="center"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_camera_alt_black_24dp" />

            </TableRow>
            <!--                    <RelativeLayout-->
            <!--                        android:gravity="center"-->
            <!--                        android:layout_marginLeft="15sp"-->
            <!--                        android:layout_width="wrap_content"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:orientation="vertical">-->
            <!--                        <Button-->
            <!--                            android:id="@+id/scanerId"-->
            <!--                            android:layout_width="100sp"-->
            <!--                            android:layout_height="40sp"-->
            <!--                            android:background="@drawable/square_shape_blue"-->
            <!--                            android:text="Scanner"-->
            <!--                            android:textColor="@color/white"-->
            <!--                            android:textSize="14sp" />-->
            <!--                    </RelativeLayout>-->
            <RelativeLayout
                android:gravity="center"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_below="@+id/lv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="128dp"
                        android:layout_height="120sp"
                        android:src="@drawable/priviewno"/>
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="128dp"
                        android:layout_height="120sp"
                        android:src="@drawable/priviewno" />


                </LinearLayout>

            </RelativeLayout>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvpartsId"
        android:layout_below="@+id/lvv"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="60sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:background="@drawable/squareshape"
                android:id="@+id/PnameId"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:hint="Parts Name"
                android:paddingLeft="5sp"/>
            <EditText
                android:background="@drawable/squareshape"
                android:id="@+id/pmodelNoId"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:hint="Enter Model No"
                android:paddingLeft="5sp"/>
            <EditText
                android:background="@drawable/squareshape"
                android:id="@+id/pbrandId"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:hint="Enter Brand"
                android:paddingLeft="5sp"/>
            <EditText
                android:background="@drawable/squareshape"
                android:id="@+id/quantrityId"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:hint="Quantity"
                android:paddingLeft="5sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="60sp"
        android:id="@+id/llvpendingotherId"
        android:layout_below="@+id/lvpartsId"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lvsp"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/squareshape"
                android:gravity="center"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spID"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/image" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lvsp"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/otherId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <EditText
                    android:id="@+id/othernameId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other Name"
                    android:drawableRight="@drawable/star_color"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/colorPrimaryDark" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/subID"
            android:background="@drawable/square_shape_blue"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Submit" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>