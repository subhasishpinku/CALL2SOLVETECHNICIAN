<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_shape"
    android:layout_marginBottom="10sp">
    <TextView
        android:id="@+id/documetnameId"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:text="Document Name :"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:id="@+id/documetnameIdd"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:layout_toRightOf="@+id/documetnameId"
        android:text="Voter"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/documetnoId"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/documetnameId"
        android:text="Document No      :"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/documetnoIdd"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/documetnameIdd"
        android:layout_toRightOf="@+id/documetnoId"
        android:text="Document No"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/trueId"
        android:visibility="gone"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/documetnoIdd"
        android:layout_toRightOf="@+id/documetnoId"
        android:text="Document No"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:layout_marginBottom="5sp"/>
    <TextView
        android:id="@+id/filename"
        android:visibility="gone"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trueId"
        android:layout_toRightOf="@+id/documetnoId"
        android:text="Document No"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:layout_marginBottom="5sp"/>
    <ImageView
        android:id="@+id/icon"
        android:visibility="gone"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="225dp"
        android:background="@drawable/ic_remove_red_eye_black_24dp"
        android:contentDescription="TODO"
        tools:ignore="RtlCompat" />

</RelativeLayout>
</LinearLayout>
