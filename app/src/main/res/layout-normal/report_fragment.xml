<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lv"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/linerridues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3.2">
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="2sp"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/FdateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/searchID"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/spinerimage" />

        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="2sp"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/TdateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="To Date"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/searchIDD"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/spinerimage" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2sp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/findID"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:background="@drawable/ic_youtube_searched_for_black_24dp" />
        </RelativeLayout>
    </LinearLayout>
<!--    <android.support.v7.widget.RecyclerView-->
<!--        android:id="@+id/recyclerView"-->
<!--        android:layout_below="@+id/lv"-->
<!--        android:layout_marginRight="10sp"-->
<!--        android:layout_marginLeft="10sp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--    </android.support.v7.widget.RecyclerView>-->

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_border"
        android:layout_marginBottom="10sp">
        <ImageView
            android:id="@+id/imgID"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:background="@mipmap/assign"/>
        <TextView
            android:layout_toRightOf="@+id/imgID"
            android:id="@+id/assennameId"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Assign Call"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/assenamountID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nameId"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40sp"
            android:text="10"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv1"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_border"
        android:layout_marginBottom="10sp">
        <ImageView
            android:id="@+id/PimgIDD"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:background="@mipmap/pend"/>
        <TextView
            android:layout_toRightOf="@+id/PimgIDD"
            android:id="@+id/pendingnameId"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Call"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/pendingamountID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nameId"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40sp"
            android:text="10"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv3"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_border"
        android:layout_marginBottom="10sp">
        <ImageView
            android:id="@+id/ComimgIDD"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:background="@mipmap/complete_call"/>
        <TextView
            android:layout_toRightOf="@+id/ComimgIDD"
            android:id="@+id/complitameId"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Call"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/complitamountID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nameId"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40sp"
            android:text="10"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rv4"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/rv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_border"
        android:layout_marginBottom="10sp">
        <ImageView
            android:id="@+id/RejectIDD"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:background="@mipmap/rejected"/>
        <TextView
            android:layout_toRightOf="@+id/RejectIDD"
            android:id="@+id/rejectnameId"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejected Call"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/rejectamountID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nameId"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40sp"
            android:text="10"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/PerLvId"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/rv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            android:background="@drawable/graph" />
        <TextView
            android:id="@+id/performId"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Performance :"
            android:textStyle="bold"
            android:textColor="@color/greencode"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:visibility="gone"
        android:layout_marginTop="100sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="TOTAL :"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20sp" />
        <TextView
            android:layout_weight="5"
            android:id="@+id/priceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="50"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
