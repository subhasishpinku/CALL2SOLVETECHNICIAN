<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_layout_height"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <call.callsolv.call2solvetechnician.CircularImageView
                android:layout_width="@dimen/drawer_circular_image"
                android:layout_height="@dimen/drawer_circular_image"
                android:src="@mipmap/logo"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:civ_border_width="@dimen/drawer_civ_border"
                app:civ_border_color="@color/textColorPrimary"
                android:id="@+id/profileImageView" />
            <TextView
                android:id="@+id/nameTextView"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/profileImageView"
                android:textAllCaps="true"
                android:text="Subhasish Singha"
                android:textColor="@color/colorwhite" />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_header_container">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard"
                android:id="@+id/dashboardId"
                android:drawableLeft="@mipmap/dash"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Profile"
                android:id="@+id/profileId"
                android:layout_below="@+id/dashboardId"
                android:drawableLeft="@mipmap/profile"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MyHUBDetails"
                android:id="@+id/hubId"
                android:layout_below="@+id/profileId"
                android:drawableLeft="@mipmap/hub"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MySpokeDetails"
                android:id="@+id/myspokId"
                android:layout_below="@+id/hubId"
                android:drawableLeft="@mipmap/master"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calllist"
                android:id="@+id/calllistID"
                android:layout_below="@+id/myspokId"
                android:drawableLeft="@mipmap/call"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report"
                android:id="@+id/reportId"
                android:layout_below="@+id/calllistID"
                android:drawableLeft="@mipmap/report"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compilted"
                android:id="@+id/complitedlistId"
                android:layout_below="@+id/reportId"
                android:drawableLeft="@mipmap/completecall"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rejectcall"
                android:id="@+id/regectcalllistID"
                android:layout_below="@+id/complitedlistId"
                android:drawableLeft="@mipmap/rejected"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating"
                android:id="@+id/ratingId"
                android:layout_below="@+id/regectcalllistID"
                android:drawableLeft="@mipmap/rating"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myexpend"
                android:id="@+id/expaned"
                android:layout_below="@+id/ratingId"
                android:drawableLeft="@mipmap/expand"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/datewisecollection"
                android:id="@+id/earing"
                android:layout_below="@+id/expaned"
                android:drawableLeft="@mipmap/earning"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:id="@+id/changePassId"
                android:layout_below="@+id/earing"
                android:drawableLeft="@drawable/ic_changepass"
                android:gravity="start|center_vertical"
                android:drawablePadding="@dimen/drawer_drawable_padding"
                android:layout_marginLeft="@dimen/drawer_margin_left"
                android:layout_marginTop="@dimen/drawer_margin_left2"
                android:textSize="@dimen/drawer_textview_size"/>

            <LinearLayout
                android:id="@+id/loginLvID"
                android:layout_below="@+id/changePassId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_below="@+id/rateserviceID"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="20sp"
                    android:id="@+id/myview1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDD9D9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/logoutId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
                        android:text="logout"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="@dimen/drawer_drawable_padding"
                        android:layout_marginLeft="@dimen/drawer_margin_left"
                        android:layout_marginTop="10sp"
                        android:textSize="@dimen/drawer_textview_size"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>