<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="RtlCompat"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:src="@mipmap/logo" />
    </android.support.v7.widget.Toolbar>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relativeLayoutID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/square_border">
                <ImageView
                    android:id="@+id/imgID"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginLeft="5sp"
                    android:src="@mipmap/ac_grey"/>
                <TextView
                    android:layout_toRightOf="@+id/imgID"
                    android:textSize="25sp"
                    android:id="@+id/nameId"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microwave Oven Repair"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_toRightOf="@+id/imgID"
                    android:textSize="25sp"
                    android:id="@+id/time"
                    android:layout_below="@+id/nameId"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday, 23rd April 2019 at 10:30am"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/totalId"
                    android:textSize="25sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/time"
                    android:layout_toRightOf="@+id/imgID"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Total Payment :"/>
                <TextView
                    android:id="@+id/amountID"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/totalId"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="50sp"
                    android:drawableLeft="@drawable/rupeess"
                    android:text="500"
                    android:textColor="#ff0000"
                    android:textStyle="bold" />
            </RelativeLayout>
            <TextView
                android:id="@+id/detalId"
                android:textSize="25sp"
                android:layout_below="@+id/relativeLayoutID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Customer Details"
                />
            <LinearLayout
                android:id="@+id/lv"
                android:layout_below="@+id/detalId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/square_border"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/userNameId"
                    android:drawableLeft="@drawable/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10sp"
                    android:textSize="25sp"
                    android:layout_marginLeft="5sp"
                    android:textStyle="bold"
                    android:text="Bijoy Das"/>
                <TextView
                    android:id="@+id/phoneId"
                    android:layout_marginTop="10sp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5sp"
                    android:text="9163752468"/>
                <TextView
                    android:id="@+id/placeId"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginLeft="5sp"
                    android:textStyle="bold"
                    android:text="Kolkata Belgachiya"/>
            </LinearLayout>
            <TextView
                android:id="@+id/productId"
                android:layout_below="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text=" Product Details" />
            <LinearLayout
                android:id="@+id/lvv"
                android:layout_below="@+id/productId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/square_border"
                android:orientation="vertical">
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >
                    <TableRow
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Product" />
                        <TextView
                            android:id="@+id/productNameId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Window Air Conditioner" />
                    </TableRow>
                    <TableRow
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Category" />
                        <TextView
                            android:id="@+id/CategoryNameID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Home Appliances" />
                    </TableRow>
                    <TableRow
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Company" />
                        <TextView
                            android:id="@+id/CompanyId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Samsung" />
                    </TableRow>
                    <TableRow
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Model No" />
                        <TextView
                            android:id="@+id/modelId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="123456" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/serviceId"
                android:layout_below="@+id/lvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Service Details" />
            <TextView
                android:id="@+id/serviceNameId"
                android:layout_below="@+id/serviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s" />
            <TextView
                android:id="@+id/changeId"
                android:layout_below="@+id/lvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Charges Details" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <TextView
                    android:id="@+id/BrkID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Breakdown Charges"
                    />
                <TextView
                    android:id="@+id/breakId"
                    android:layout_marginRight="5sp"
                    android:layout_alignBaseline="@+id/BrkID"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/rupeess_black"
                    android:text="500"
                    />
                <TextView
                    android:id="@+id/intallId"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/BrkID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Installation Charges"
                    />
                <TextView
                    android:id="@+id/installationId"
                    android:layout_marginRight="5sp"
                    android:layout_alignBaseline="@+id/intallId"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/rupeess_black"
                    android:text="100"
                    />
                <TextView
                    android:id="@+id/taxId"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/intallId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Taxable Value"
                    />
                <TextView
                    android:id="@+id/taxtvalueId"
                    android:layout_marginRight="5sp"
                    android:layout_alignBaseline="@+id/taxId"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/rupeess_black"
                    android:text="100"
                    />
                <TextView
                    android:id="@+id/cgstId"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/taxId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="SGST"
                    />
                <TextView
                    android:id="@+id/sgstID"
                    android:layout_marginRight="5sp"
                    android:layout_alignBaseline="@+id/cgstId"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/rupeess_black"
                    android:text="100"
                    />
                <TextView
                    android:id="@+id/totaamountlId"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/cgstId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Total Amount"
                    />
                />
                <TextView
                    android:id="@+id/amountId"
                    android:layout_marginRight="5sp"
                    android:layout_alignBaseline="@+id/totaamountlId"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:drawableLeft="@drawable/rupeess"
                    android:text="800"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/paymetId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Payment Mode" />
            <RelativeLayout
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/paidId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Paid By"
                    />
                <TextView
                    android:id="@+id/paidbyID"
                    android:layout_marginRight="5sp"
                    android:layout_alignBaseline="@+id/paidId"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/rupeess_black"
                    android:text="Cash"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tectionID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Technician's Review" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--<TextView-->
                <!--android:id="@+id/ratingID"-->
                <!--android:layout_marginLeft="8sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="15sp"-->
                <!--android:textStyle="bold"-->
                <!--android:text="Rating"-->
                <!--/>-->
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:numStars="5"
                    android:stepSize="1" />
                <TextView
                    android:layout_below="@+id/ratingBar"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Good Customer"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

