<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="RtlCompat"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:src="@mipmap/logo" />
    </android.support.v7.widget.Toolbar>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="70sp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relativeLayoutID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/square_border">
                <ImageView
                    android:id="@+id/imgID"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginLeft="5sp"
                    android:src="@mipmap/ac_grey"/>
                <TextView
                    android:layout_toRightOf="@+id/imgID"
                    android:textSize="25sp"
                    android:id="@+id/nameId"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microwave Oven Repair"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/jonId"
                    android:layout_toRightOf="@+id/imgID"
                    android:textSize="25sp"
                    android:layout_below="@+id/nameId"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOB ID:12354626663"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_toRightOf="@+id/imgID"
                    android:textSize="25sp"
                    android:id="@+id/time"
                    android:layout_below="@+id/jonId"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday, 23rd April 2019 at 10:30am"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:id="@+id/llvv"
                    android:visibility="gone"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/imgID"
                    android:layout_below="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="25sp"
                        android:layout_marginBottom="10sp"
                        android:layout_below="@+id/time"
                        android:layout_marginLeft="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Assign By  :"/>
                    <TextView
                        android:id="@+id/asyenbyId"
                        android:textSize="25sp"
                        android:layout_marginBottom="10sp"
                        android:layout_below="@+id/time"
                        android:layout_marginLeft="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:text="Assign Name"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/totalId"
                    android:textSize="25sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/llvv"
                    android:layout_toRightOf="@+id/imgID"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Amount :"/>
                <TextView
                    android:id="@+id/amountID"
                    android:textSize="14sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/totalId"
                    android:layout_alignBaseline="@+id/totalId"
                    android:layout_alignParentRight="true"                    android:layout_marginRight="10sp"
                    android:drawableLeft="@drawable/rupeess"
                    android:text="500"
                    android:textColor="#ff0000"
                    android:textStyle="bold" />
            </RelativeLayout>
            <TextView
                android:id="@+id/detalId"
                android:layout_below="@+id/relativeLayoutID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Customer Details"
                />
            <LinearLayout
                android:id="@+id/lv"
                android:layout_below="@+id/detalId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/square_border"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/userNameId"
                    android:drawableLeft="@drawable/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10sp"
                    android:textSize="25sp"
                    android:layout_marginLeft="5sp"
                    android:textStyle="bold"
                    android:text="Bijoy Das"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/phoneId"
                        android:layout_weight="1"
                        android:layout_marginTop="5sp"
                        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5sp"
                        android:text="9163752468"/>
                    <Button
                        android:id="@+id/imgId"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/ic_phone_black_24dp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                    <TextView
                        android:id="@+id/phoneIdd"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5sp"
                        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="9163752468"/>
                    <Button
                        android:id="@+id/imgIdd"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="5sp"
                        android:background="@drawable/ic_phone_black_24dp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/placeId"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_marginLeft="5sp"
                    android:textStyle="bold"
                    android:text="Kolkata Belgachiya"/>
            </LinearLayout>
            <TextView
                android:id="@+id/productId"
                android:layout_below="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text=" Product Details" />
            <LinearLayout
                android:id="@+id/lvv"
                android:layout_below="@+id/productId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/square_border"
                android:orientation="vertical">
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >
                    <TableRow
                        android:padding="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Product" />
                        <TextView
                            android:id="@+id/productNameId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Window Air Conditioner" />
                    </TableRow>
                    <TableRow
                        android:padding="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Category" />
                        <TextView
                            android:id="@+id/CategoryNameID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Home Appliances" />
                    </TableRow>
                    <TableRow
                        android:padding="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Company" />
<!--                        <EditText-->
<!--                            android:id="@+id/CompanyId"-->
<!--                            android:layout_marginBottom="5sp"-->
<!--                            android:layout_marginTop="5sp"-->
<!--                            android:background="@drawable/square_border"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="60sp"-->
<!--                            android:layout_weight="1"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textSize="25sp"-->
<!--                            android:textStyle="bold"-->
<!--                            android:gravity="center"-->
<!--                            android:hint="Enter Company Name" />-->
                        <TextView
                            android:id="@+id/CompanyId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Home Appliances" />
                    </TableRow>
                    <TableRow
                        android:padding="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Model No" />
<!--                        <EditText-->
<!--                            android:id="@+id/modelId"-->
<!--                            android:layout_marginBottom="5sp"-->
<!--                            android:layout_marginTop="5sp"-->
<!--                            android:background="@drawable/square_border"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="60sp"-->
<!--                            android:layout_weight="1"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:textSize="25sp"-->
<!--                            android:textStyle="bold"-->
<!--                            android:gravity="center"-->
<!--                            android:hint="Enter Model No" />-->
                        <TextView
                            android:id="@+id/modelId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:text="Home Appliances" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/serviceId"
                android:layout_below="@+id/lvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text=" Product Issue" />
            <TextView
                android:id="@+id/serviceNameId"
                android:layout_below="@+id/serviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s" />
            <TextView
                android:id="@+id/productdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Preferable Date &amp; Time for service" />
            <TextView
                android:id="@+id/productdateID"
                android:layout_marginBottom="100sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Monday, 2nd May 2019  at 12:30 P.M" />

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="2">
        <Button
            android:id="@+id/subID"
            android:layout_weight="1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/square_shape_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Job"
            android:textColor="@color/white"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/trackmeId"
            android:layout_weight="1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/square_shape_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Me"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>

